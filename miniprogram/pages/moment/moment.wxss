  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
}

.delete-option {
  background: #fef2f2;
  border: 1rpx solid #fecaca;
}

.delete-option-text {
  color: #dc2626;
}

.cancel-option {
  background: #f9fafb;
  border: 1rpx solid #e5e7eb;
}

.cancel-option-text {
  color: #6b7280;
}