/* moment页面样式 */
.moment-container {
  background-color: #f6f7f9;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* Banner区域 */
.banner {
  margin: 0;
  border-radius: 0;
  overflow: hidden;
  box-shadow: none;
  position: relative;
  height: 300rpx;
  width: 100%;
}

/* Banner背景图片 */
.banner-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.banner-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.1));
  padding: 32rpx;
  z-index: 2;
}

/* 左上角：年月日 + 农历日期 */
.date-time {
  position: absolute;
  top: 32rpx;
  left: 32rpx;
  color: #000000;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.date {
  font-size: 32rpx;
  font-weight: 700;
  line-height: 1.2;
  margin-bottom: 8rpx;
}

.lunar-date {
  font-size: 24rpx;
  opacity: 0.9;
  font-weight: 700;
}

/* 左下角：天气信息 */
.weather-info-left {
  position: absolute;
  bottom: 20rpx;
  left: 32rpx;
  color: #000000;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  z-index: 10;
}

.weather-info-left:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.weather-temp {
  font-size: 28rpx;
  font-weight: 700;
  line-height: 1;
}

.weather-desc {
  font-size: 20rpx;
  opacity: 0.9;
  font-weight: 700;
}

/* 右上角：天气图标 */
.weather-icon-top {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  color: #000000;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  z-index: 10;
}

.weather-icon-top:active {
  opacity: 0.8;
  transform: scale(0.95);
}

.weather-icon {
  font-size: 36rpx;
  line-height: 1;
}

.weather-loading {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 20rpx;
  animation: rotate 1s linear infinite;
}


@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 右下角：倒计时 */
.countdown {
  position: absolute;
  bottom: 20rpx;
  right: 32rpx;
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
  max-width: 200rpx;
}

.countdown-text {
  color: #000000;
  font-size: 18rpx;
  font-weight: 700;
  opacity: 0.8;
  text-align: right;
  line-height: 1.3;
}

/* 加载更多状态 */
.load-more-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 20rpx;
  margin: 20rpx 0;
}

.loading-spinner {
  margin-bottom: 20rpx;
}

.loading-spinner .spinner {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #f3f3f3;
  border-top: 3rpx solid #F9C0C4;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  font-size: 24rpx;
  color: #666666;
  font-weight: 400;
}

/* 到底提示 */
.end-tip {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 20rpx;
  margin: 20rpx 0;
}

.end-tip-text {
  font-size: 24rpx;
  color: #999999;
  font-weight: 400;
}

/* 空状态 */
.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 20rpx;
  margin: 40rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  font-weight: 400;
  text-align: center;
}

/* 图片预览弹窗 - 全屏显示 */
.image-preview-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  background: rgba(0, 0, 0, 0.9);
  display: flex;
  justify-content: center;
  align-items: center;
  animation: fadeIn 0.3s ease-out;
}

.image-preview-content {
  width: 100vw;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  padding: 0;
}

.preview-image {
  width: 100vw;
  height: 100vh;
  object-fit: contain;
  border-radius: 0;
  box-shadow: none;
  animation: scaleIn 0.3s ease-out;
  transition: transform 0.1s ease-out;
  transform-origin: center center;
  user-select: none;
  -webkit-user-select: none;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes scaleIn {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* 动态列表 */
.feed-scroll {
  height: calc(100vh - 300rpx); /* 减去banner高度 */
  margin-top: 40rpx;
}

.feed-list {
  padding: 0 20rpx;
}

.moment-item {
  display: flex;
  margin-bottom: 32rpx;
  padding: 0 20rpx;
  position: relative;
  align-items: flex-start;
}

.moment-item.bubble-left {
  flex-direction: row;
}

.moment-item.bubble-right {
  flex-direction: row;
  justify-content: flex-end;
}

.avatar-container {
  flex-shrink: 0;
  z-index: 2;
}

.avatar-container.left {
  margin-right: 16rpx;
}

.avatar-container.right {
  margin-left: 16rpx;
}

.moment-avatar {
  border: 3rpx solid #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border-radius: 50%;
}

.bubble-content {
  flex: 1;
  max-width: calc(100% - 120rpx);
  position: relative;
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.bubble-left-content {
  background: #f0f0f0;
  color: #333333;
}

.bubble-right-content {
  background: #F9C0C4;
  color: #333333;
}

.bubble-arrow {
  position: absolute;
  top: 20rpx;
  width: 0;
  height: 0;
  border: 12rpx solid transparent;
}

.bubble-arrow-left {
  left: -24rpx;
  border-right-color: #f0f0f0;
}

.bubble-arrow-right {
  right: -24rpx;
  border-left-color: #F9C0C4;
}

.moment-text {
  font-size: 28rpx;
  line-height: 1.5;
  margin-bottom: 16rpx;
  word-break: break-word;
  color: #000000;
}

.moment-images {
  margin-bottom: 16rpx;
}

/* 单张图片 - 大图展示 */
.single-image-container {
  width: 100%;
  margin-bottom: 16rpx;
}

.single-image {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
  object-fit: cover;
}

/* 多张图片 - 九宫格展示 */
.grid-images-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8rpx;
  width: 100%;
}

.grid-image-item {
  aspect-ratio: 1;
  width: 100%;
}

.grid-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  object-fit: cover;
}

.moment-time {
  font-size: 20rpx;
  margin-top: 12rpx;
  text-align: right;
  color: #000000;
}

/* 时间设置区域 - 发布按钮上方右下角小按钮 */
.time-setting-corner-small {
  position: absolute;
  right: 0;
  top: -75rpx;
  z-index: 10;
}

.time-picker-corner-small {
  /* TDesign时间选择器样式 */
}

.time-display-corner-small {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8rpx 12rpx;
  background: #ffffff;
  border: 1rpx solid #666666;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s ease;
  cursor: pointer;
  min-width: 60rpx;
}

.time-display-corner-small:active {
  background: #F9C0C4;
  border-color: #F9C0C4;
  transform: scale(0.95);
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.15);
}

.time-value-corner-small {
  font-size: 20rpx;
  color: #666666;
  font-weight: 500;
  line-height: 1.2;
  text-align: center;
  white-space: nowrap;
}

/* 原生发布按钮 */
.publish-fab-native {
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  z-index: 100;
  width: 80rpx;
  height: 80rpx;
  background-color: #666666;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  transition: all 0.2s ease;
}

.publish-fab-native:active {
  background-color: #F9C0C4;
  transform: scale(0.95);
}

.fab-icon {
  font-size: 50rpx;
  color: #ffffff;
  font-weight: 300;
  line-height: 1;
}

/* 发布弹窗 */
.publish-popup {
  border-radius: 24rpx 24rpx 0 0;
}

.publish-content {
  background: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 32rpx;
}

.publish-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #e5e7eb;
}

.publish-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2328;
}

.publish-close {
  font-size: 40rpx;
  color: #999;
  cursor: pointer;
  padding: 8rpx;
}

.publish-form {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.publish-textarea {
  min-height: 120rpx;
}

/* 图片上传区域 */
.image-upload-section {
  margin: 20rpx 0;
}

.upload-tip {
  font-size: 22rpx;
  color: #6b7280;
  margin-bottom: 12rpx;
  font-weight: 400;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.image-item {
  position: relative;
  width: 100%;
  height: 120rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.remove-btn {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 32rpx;
  height: 32rpx;
  background: #ff4757;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
}

.add-image-btn {
  width: 100%;
  height: 120rpx;
  border: 1rpx dashed #e5e7eb;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fafafa;
  position: relative;
  z-index: 1;
  cursor: pointer;
  transition: all 0.2s ease;
}

.add-image-btn:active {
  background: #f3f4f6;
  border-color: #F9C0C4;
  transform: scale(0.98);
}

.add-icon {
  font-size: 36rpx;
  color: #9ca3af;
  font-weight: 300;
  line-height: 1;
}

.publish-actions {
  display: flex;
  gap: 16rpx;
  justify-content: flex-end;
  margin-top: 24rpx;
  position: relative;
}

.publish-reset {
  flex: 1;
}

.publish-submit {
  flex: 1;
}

/* 原生按钮样式 */
.publish-reset-native,
.publish-submit-native {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.15s ease;
  cursor: pointer;
  margin: 0 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.publish-reset-native {
  background-color: transparent;
  border: 2rpx solid #666666;
  color: #666666;
}

.publish-reset-native:active {
  background-color: #F9C0C4;
  border-color: #F9C0C4;
  color: #ffffff;
  transform: translateY(1rpx);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.15);
}

.publish-submit-native {
  background-color: #666666;
  border: 2rpx solid #666666;
  color: #ffffff;
}

.publish-submit-native:active {
  background-color: #F9C0C4;
  border-color: #F9C0C4;
  transform: translateY(1rpx);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.15);
}

.publish-submit-native.publishing {
  background-color: #999999;
  border-color: #999999;
  opacity: 0.8;
  cursor: not-allowed;
}

.publish-submit-native.publishing:active {
  background-color: #F9C0C4;
  border-color: #F9C0C4;
  opacity: 1;
  transform: translateY(1rpx);
}

.button-text {
  font-size: 28rpx;
  font-weight: 500;
  line-height: 1;
}

/* 删除选项弹窗样式 */
.delete-options-popup {
  z-index: 1000;
}

.delete-options-content {
  background: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 32rpx 32rpx 40rpx;
}

.delete-options-title {
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 32rpx;
}

.delete-options-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.delete-option-item {
  height: 88rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
}

.delete-option {
  background: #fef2f2;
  border: 1rpx solid #fecaca;
}

.delete-option-text {
  color: #dc2626;
}

.cancel-option {
  background: #f9fafb;
  border: 1rpx solid #e5e7eb;
}

.cancel-option-text {
  color: #6b7280;
}