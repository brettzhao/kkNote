.publish-submit-native.publishing:active {
  background-color: #F9C0C4;
  border-color: #F9C0C4;
  opacity: 1;
  transform: translateY(1rpx);
}

.button-text {
  font-size: 28rpx;
  font-weight: 500;
  line-height: 1;
}

/* 删除选项弹窗样式 */
.delete-options-popup {
  z-index: 1000;
}

.delete-options-content {
  background: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 32rpx 32rpx 40rpx;
}

.delete-options-title {
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 32rpx;
}

.delete-options-actions {
