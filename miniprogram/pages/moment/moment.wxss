/* moment页面样式 */
.moment-container {
  background-color: #f6f7f9;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* Banner区域 */
.banner {
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  position: relative;
  height: 300rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.2));
  padding: 32rpx;
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 1fr 1fr;
  gap: 16rpx;
}

/* 左上角：年月日 + 农历日期 */
.date-time {
  grid-column: 1;
  grid-row: 1;
  color: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.date {
  font-size: 32rpx;
  font-weight: 600;
  line-height: 1.2;
  margin-bottom: 8rpx;
}

.lunar-date {
  font-size: 24rpx;
  opacity: 0.9;
  font-weight: 400;
}

/* 右上角：天气图标 */
.weather-icon {
  grid-column: 2;
  grid-row: 1;
  display: flex;
  justify-content: flex-end;
  align-items: flex-start;
}

.weather-emoji {
  font-size: 48rpx;
  line-height: 1;
}

/* 左下角：天气信息 */
.weather-info {
  grid-column: 1;
  grid-row: 2;
  color: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: flex-start;
}

.weather-temp {
  font-size: 36rpx;
  font-weight: 700;
  line-height: 1;
  margin-bottom: 4rpx;
}

.weather-desc {
  font-size: 20rpx;
  opacity: 0.8;
  font-weight: 400;
}

/* 右下角：倒计时 */
.countdown {
  grid-column: 2;
  grid-row: 2;
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
}

.countdown-text {
  color: #ffffff;
  font-size: 18rpx;
  opacity: 0.8;
  text-align: right;
  line-height: 1.3;
}

/* 动态列表 */
.feed-list {
  padding: 0 20rpx;
}

.moment-item {
  display: flex;
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  position: relative;
}

.moment-item.avatar-left {
  flex-direction: row;
}

.moment-item.avatar-right {
  flex-direction: row-reverse;
}

.moment-avatar {
  flex-shrink: 0;
  margin: 0 16rpx;
}

.moment-content {
  flex: 1;
  min-width: 0;
}

.moment-text {
  font-size: 28rpx;
  line-height: 1.5;
  color: #1f2328;
  margin-bottom: 16rpx;
  word-break: break-word;
}

.moment-images {
  margin-bottom: 16rpx;
}

.moment-image {
  width: 100%;
  height: 120rpx;
  border-radius: 8rpx;
}

.moment-time {
  position: absolute;
  right: 24rpx;
  bottom: 16rpx;
  font-size: 20rpx;
  color: #999999;
}

/* 发布按钮 */
.publish-fab {
  position: fixed;
  right: 40rpx;
  bottom: 160rpx;
  z-index: 100;
}

/* 发布弹窗 */
.publish-popup {
  border-radius: 24rpx 24rpx 0 0;
}

.publish-content {
  background: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 32rpx;
}

.publish-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #e5e7eb;
}

.publish-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2328;
}

.publish-form {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.publish-textarea {
  min-height: 120rpx;
}

.publish-upload {
  margin: 16rpx 0;
}

.publish-actions {
  display: flex;
  gap: 16rpx;
  justify-content: flex-end;
  margin-top: 24rpx;
}

.publish-reset {
  flex: 1;
}

.publish-submit {
  flex: 1;
}