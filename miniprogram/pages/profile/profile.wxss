/* profile页面样式 */
.profile-container {
  background-color: #f6f7f9;
  min-height: 100vh;
  padding: 20rpx;
}

/* Loading界面样式 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 60vh;
  padding: 40rpx 20rpx;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.loading-spinner {
  margin-bottom: 30rpx;
}

.spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #F9C0C4;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666666;
  font-weight: 400;
}

/* 主要内容样式 */
.main-content {
  width: 100%;
}

/* 登录界面样式 */
.login-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 60vh;
  padding: 40rpx 20rpx;
}

.login-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  width: 100%;
  max-width: 500rpx;
}

.login-avatar-section {
  margin-bottom: 40rpx;
}

.login-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.login-tip {
  margin-bottom: 60rpx;
}

.tip-text {
  font-size: 32rpx;
  color: #333333;
  font-weight: 400;
  line-height: 1.4;
}

.wechat-login-btn {
  width: 100%;
  height: 88rpx;
  background: #07c160;
  color: #ffffff;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s ease;
}

.wechat-login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.4);
}

/* 测试信息 */
.test-info {
  background: rgba(255, 255, 255, 0.9);
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.test-info text {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

/* 用户信息卡片 */
.user-card {
  display: flex;
  align-items: flex-start;
  padding: 32rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 24rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.user-card:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

.avatar-section {
  position: relative;
  margin-right: 24rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  cursor: pointer;
}

.avatar-edit {
  position: absolute;
  bottom: -8rpx;
  right: -8rpx;
  width: 32rpx;
  height: 32rpx;
  background: #F9C0C4;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #ffffff;
}

.edit-icon {
  font-size: 16rpx;
  color: #ffffff;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.user-name-section {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2328;
  flex: 1;
}

.edit-btn {
  width: 32rpx;
  height: 32rpx;
  background: #f0f0f0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.user-id-section {
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 24rpx;
  color: #999999;
}


/* 统计数据 */
.stats-section {
  margin-bottom: 24rpx;
}

.section-title {
  margin-bottom: 16rpx;
}

.title-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2328;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.stat-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 700;
  color: #F9C0C4;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
}

/* 详细统计 */
.detail-stats {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-label {
  font-size: 28rpx;
  color: #666666;
}

.detail-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2328;
}

/* 功能菜单 */
.menu-group {
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

/* 退出登录按钮样式 */
.logout-cell {
  color: #ff4757 !important;
}