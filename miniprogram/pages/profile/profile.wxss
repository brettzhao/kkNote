/* profile页面样式 */
.profile-container {
  background-color: #f6f7f9;
  min-height: 100vh;
  padding: 20rpx;
}

/* Loading界面样式 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 60vh;
  padding: 40rpx 20rpx;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.loading-spinner {
  margin-bottom: 30rpx;
}

.spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #F9C0C4;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666666;
  font-weight: 400;
}

/* 主要内容样式 */
.main-content {
  width: 100%;
}

/* 登录界面样式 */
.login-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 60vh;
  padding: 40rpx 20rpx;
}

.login-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  width: 100%;
  max-width: 500rpx;
}

.login-avatar-section {
  margin-bottom: 40rpx;
}

.login-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.login-tip {
  margin-bottom: 60rpx;
}

.tip-text {
  font-size: 32rpx;
  color: #333333;
  font-weight: 400;
  line-height: 1.4;
}

.wechat-login-btn {
  width: 100%;
  height: 88rpx;
  background: #07c160;
  color: #ffffff;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s ease;
}

.wechat-login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.4);
}

/* 测试信息 */
.test-info {
  background: rgba(255, 255, 255, 0.9);
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.test-info text {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

/* 用户信息卡片 */
.user-card {
  display: flex;
  align-items: flex-start;
  padding: 32rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 24rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.user-card:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

.avatar-section {
  position: relative;
  margin-right: 24rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  cursor: pointer;
}

.avatar-edit {
  position: absolute;
  bottom: -8rpx;
  right: -8rpx;
  width: 32rpx;
  height: 32rpx;
  background: #F9C0C4;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #ffffff;
}

.edit-icon {
  font-size: 16rpx;
  color: #ffffff;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.user-name-section {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2328;
  flex: 1;
}

.edit-btn {
  width: 32rpx;
  height: 32rpx;
  background: #f0f0f0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.user-id-section {
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 24rpx;
  color: #999999;
}


/* 统计数据 */
.stats-section {
  margin-bottom: 24rpx;
}

.section-title {
  margin-bottom: 16rpx;
}

.title-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2328;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.stat-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 700;
  color: #F9C0C4;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
}

/* 详细统计 */
.detail-stats {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-label {
  font-size: 28rpx;
  color: #666666;
}

.detail-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2328;
}

/* 功能菜单 */
.menu-group {
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

/* 退出登录按钮样式 */
.logout-cell {
  color: #ff4757 !important;
}

/* 订阅次数显示 */
.subscribe-count-display {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 16rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.subscribe-count-display:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
  background: #f8f8f8;
}

.count-label {
  font-size: 28rpx;
  color: #666666;
  margin-right: 12rpx;
}

.count-number {
  font-size: 40rpx;
  font-weight: 700;
  color: #F9C0C4;
}

/* 推送状态 */
.push-status {
  text-align: center;
  padding: 12rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

/* 清空订阅次数弹窗 */
.clear-subscribe-popup {
  border-radius: 24rpx 24rpx 0 0;
  /* 防止键盘弹起时抖动 */
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100000;
  /* 确保弹窗能够正确显示 */
  max-height: 95vh;
  height: auto;
  overflow: hidden;
  /* 确保弹窗不会被底部导航栏遮挡 */
  padding-bottom: env(safe-area-inset-bottom);
  /* 确保弹窗完全覆盖底部区域 */
  margin-bottom: 0;
}

.clear-subscribe-content {
  background: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 16rpx 24rpx 0;
  /* 设置最大高度，确保弹窗不超出屏幕 */
  max-height: 90vh;
  min-height: auto;
  /* 确保在不同屏幕尺寸下都能正常显示 */
  height: auto;
  overflow-y: auto;
  /* 防止键盘弹起时的布局抖动 */
  position: relative;
  transform: translateZ(0);
  -webkit-transform: translateZ(0);
  /* 防止弹窗内容抖动 */
  will-change: transform;
  backface-visibility: hidden;
  /* 确保内容能够完整显示 */
  display: flex;
  flex-direction: column;
}

.clear-subscribe-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
  padding-bottom: 8rpx;
  border-bottom: 1rpx solid #e5e7eb;
  /* 确保头部区域不被压缩 */
  flex-shrink: 0;
}

.clear-subscribe-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2328;
}

.clear-subscribe-close {
  font-size: 40rpx;
  color: #999;
  cursor: pointer;
  padding: 4rpx;
}

.clear-subscribe-form {
  display: flex;
  flex-direction: column;
  gap: 0;
  /* 让表单区域可以滚动，但按钮区域固定 */
  flex: 1;
  overflow-y: auto;
  min-height: 0;
  /* 确保表单内容不会挤压按钮区域 */
  max-height: calc(90vh - 200rpx);
  /* 防止表单区域抖动 */
  position: relative;
  transform: translateZ(0);
  -webkit-transform: translateZ(0);
  will-change: transform;
  backface-visibility: hidden;
}

.clear-subscribe-tip {
  font-size: 28rpx;
  color: #666666;
  text-align: center;
  line-height: 1.6;
  padding: 12rpx 0;
}

.clear-subscribe-actions {
  display: flex;
  gap: 16rpx;
  justify-content: space-between;
  margin-top: 12rpx;
  position: relative;
  /* 确保按钮区域始终可见 */
  flex-shrink: 0;
  padding: 12rpx 0 env(safe-area-inset-bottom);
  border-top: 2rpx solid #f0f0f0;
  background: #ffffff;
  /* 确保按钮区域固定在底部 */
  position: sticky;
  bottom: 0;
  z-index: 10;
  /* 减少按钮区域的高度 */
  min-height: auto;
}

.clear-subscribe-reset-native,
.clear-subscribe-submit-native {
  flex: 1;
  height: 70rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.15s ease;
  cursor: pointer;
  margin: 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.clear-subscribe-reset-native {
  background-color: transparent;
  border: 2rpx solid #666666;
  color: #666666;
}

.clear-subscribe-reset-native:active {
  background-color: #F9C0C4;
  border-color: #F9C0C4;
  color: #ffffff;
  transform: translateY(1rpx);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.15);
}

.clear-subscribe-submit-native {
  background-color: #666666;
  border: 2rpx solid #666666;
  color: #ffffff;
}

.clear-subscribe-submit-native:active {
  background-color: #F9C0C4;
  border-color: #F9C0C4;
  transform: translateY(1rpx);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.15);
}

.button-text {
  font-size: 28rpx;
  font-weight: 500;
  line-height: 1;
}